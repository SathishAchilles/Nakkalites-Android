                    <!--                    app:layout_constraintHorizontal_bias="0.0"-->
                    <!--                    app:layout_constraintHorizontal_chainStyle="spread_inside"-->
                    <!--                    app:layout_constraintStart_toStartOf="parent"-->
                    <!--                    app:layout_constraintTop_toBottomOf="@+id/tv_gender" />-->

                    <!--                <TextView-->
                    <!--                    android:id="@+id/tv_female"-->
                    <!--                    android:layout_width="0dp"-->
                    <!--                    android:layout_height="0dp"-->
                    <!--                    android:layout_marginStart="16dp"-->
                    <!--                    android:background="@drawable/bg_chip"-->
                    <!--                    android:maxHeight="40dp"-->
                    <!--                    android:singleLine="true"-->
                    <!--                    android:text="@string/female"-->
                    <!--                    android:textColor="@color/white"-->
                    <!--                    android:textSize="18sp"-->
                    <!--                    app:layout_constraintBottom_toBottomOf="@id/tv_male"-->
                    <!--                    app:layout_constraintEnd_toStartOf="@+id/tv_others"-->
                    <!--                    app:layout_constraintHorizontal_chainStyle="spread_inside"-->
                    <!--                    app:layout_constraintStart_toEndOf="@id/tv_male"-->
                    <!--                    app:layout_constraintTop_toTopOf="@id/tv_male" />-->

                    <!--                <TextView-->
                    <!--                    android:id="@+id/tv_others"-->
                    <!--                    android:layout_width="0dp"-->
                    <!--                    android:layout_height="0dp"-->
                    <!--                    android:layout_marginStart="16dp"-->
                    <!--                    android:background="@drawable/bg_chip"-->
                    <!--                    android:enabled="true"-->
                    <!--                    android:maxHeight="40dp"-->
                    <!--                    android:singleLine="true"-->
                    <!--                    android:text="@string/others"-->
                    <!--                    android:textColor="@color/white"-->
                    <!--                    android:textSize="18sp"-->
                    <!--                    app:layout_constraintBottom_toBottomOf="@id/tv_male"-->
                    <!--                    app:layout_constraintEnd_toEndOf="parent"-->
                    <!--                    app:layout_constraintHorizontal_chainStyle="spread_inside"-->
                    <!--                    app:layout_constraintStart_toEndOf="@id/tv_female"-->
                    <!--                    app:layout_constraintTop_toTopOf="@id/tv_male" />-->

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/dob_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/what_s_your_dob"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/tv_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_edittext"
                        android:inputType="text"
                        android:lineSpacingExtra="16sp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/country_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/what_s_your_country"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/tv_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_edittext"
                        android:inputType="text"
                        android:lineSpacingExtra="16sp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/city_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/what_s_your_city"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/tv_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_edittext"
                        android:inputType="text"
                        android:lineSpacingExtra="16sp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </ViewAnimator>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_cta"
            style="@style/PrimarySolid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="28dp"
            android:gravity="center"
            android:onClick="@{() -> callbacks.onNextClicked()}"
            android:padding="16dp"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </LinearLayout>
</layout>
