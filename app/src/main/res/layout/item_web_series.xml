<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="in.nakkalites.mediaclient.viewmodel.home.WebSeriesVm" />

        <variable
            name="onWebSeriesClick"
            type="kotlin.jvm.functions.Function0" />

        <variable
            name="transformations"
            type="java.util.List&lt;com.squareup.picasso.Transformation&gt;" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:onClick="@{() -> onWebSeriesClick.invoke()}"
            app:fit="@{true}"
            app:imageTransforms="@{transformations}"
            app:imageUrl="@{vm.thumbnail}"
            tools:src="@drawable/ic_launcher_background" />
    </LinearLayout>
</layout>
