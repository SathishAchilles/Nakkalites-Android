<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="in.nakkalites.mediaclient.viewmodel.video.VideoDetailItemVm" />

        <variable
            name="vm"
            type="VideoDetailItemVm" />

        <variable
            name="onShareClick"
            type="kotlin.jvm.functions.Function1&lt;VideoDetailItemVm,kotlin.Unit&gt;" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:orientation="horizontal"
            android:visibility="@{vm.showProgress}">

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:clickable="false"
                android:colorControlActivated="@color/white"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxHeight="3dp"
                android:minHeight="3dp"
                android:splitTrack="false"
                android:progress="@{vm.progress}"
                android:progressBackgroundTint="@color/grey_300"
                android:progressTint="@color/light_blue_a700_2"
                tools:progress="50" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:text="@{vm.duration}"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/plan_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_prime"
            android:backgroundTint="@{vm.planColorInt}"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="@{vm.planImg != null}"
            app:elevation="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12sp"
                android:layout_gravity="center"
                android:src="@{vm.planImg}"
                tools:src="@drawable/ic_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_bold"
                android:paddingStart="5dp"
                android:text="@{vm.planName}"
                android:textAllCaps="true"
                android:textColor="@color/grey_900_2"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/inter_bold"
            android:shadowColor="#80000000"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="@{vm.title}"
            android:textColor="@color/white"
            android:textSize="22sp"
            tools:text="Amma Expectation vs Reality" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter_regular"
            android:text="@{vm.description}"
            android:textColor="@color/grey_500_2"
            android:textSize="14sp"
            tools:text="A romantic video that resembles a typical Tamil love story. Let the romance begin!" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/inter_medium"
            android:lineSpacingExtra="4.8sp"
            android:text="@string/starring"
            android:textColor="@color/alto"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/inter_regular"
            android:lineSpacingExtra="3.9sp"
            android:text="@{vm.starring}"
            android:textColor="@color/grey_500_2"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Sindhu, Nivedhitha, Arun Kumar, Sasi Kumar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/blue_button"
            android:gravity="center"
            android:onClick="@{() -> onShareClick.invoke(vm)}"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@{@drawable/ic_share_white_24dp}"
                android:tint="@{@color/white}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_bold"
                android:padding="16dp"
                android:text="@string/share"
                android:textColor="@color/white"
                android:textSize="17sp"
                tools:text="@string/share" />
        </LinearLayout>


    </LinearLayout>
</layout>
