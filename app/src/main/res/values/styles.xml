<resources xmlns:ns1="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="expandedTitleTextAppearance">@style/CollapsingToolbarTitleStyle</item>
        <item name="spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="chipChoice">@style/ChipView.Choice</item>
        <item name="materialButtonStyle">@style/PrimarySolid</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/grey_900_5</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="elevation">4dp</item>
        <item name="tabPaddingBottom">12dp</item>
        <item name="tabPaddingTop">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/grey_900_5</item>
        <item name="tabIndicatorColor">@color/blue_400</item>
        <item name="tabSelectedTextColor">@color/blue_400</item>
        <item name="tabTextColor">@color/grey_400</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="MyTitleStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="SpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="BottomNavigationViewTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="BottomNavigationViewActiveTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">30%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ChipView.Choice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="rippleColor">@null</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipIconEnabled">false</item>
        <item name="android:minWidth">44dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style name="PrimarySolid" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="backgroundTint">@color/btn_bg_solid_primary</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Mesh.Components.Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/blue_button</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="iconPadding">4dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:stateListAnimator" ns1:ignore="NewApi">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollbarSize">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white_alpha_20</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>
</resources>
